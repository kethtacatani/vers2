<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_white"
    tools:context=".AppDevFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notificationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="4"
            android:fontFamily="@font/nunito_sans"
            android:text="App Developers"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/closeAppDev"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center | right"
            android:layout_marginRight="20dp"
            android:background="@drawable/grey_btn_ripple_circle"
            android:src="@drawable/ic_expand_down" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_frame"
                android:padding="15dp"
                android:clickable="true"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxWidth="110dp"
                        android:maxHeight="110dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/dev" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="@font/nunito_sans"
                            android:text="Keth Dominic B. Tacatani"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_weight="1"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="@font/nunito_sans"
                            android:text="Calape, Bohol, Philippines"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">


                            <ImageButton
                                android:id="@+id/gitAppDev"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/grey_btn_ripple_circle"
                                android:src="@drawable/ic_github_mark" />
                            <ImageButton
                                android:id="@+id/linkedInAppDev"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center"
                                android:background="@drawable/grey_btn_ripple_circle"
                                android:src="@drawable/ic_icons8_linkedin_96" />
                            <ImageButton
                                android:id="@+id/emailAppDev"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginLeft="7dp"
                                android:layout_gravity="center"
                                android:background="@drawable/grey_btn_ripple_circle"
                                android:src="@drawable/ic_email_dev" />
                            <ImageButton
                                android:id="@+id/phoneAppDev"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:layout_gravity="center"
                                android:background="@drawable/grey_btn_ripple_circle"
                                android:src="@drawable/ic_phone_dev" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/nunito_sans"
                    android:justificationMode="inter_word"
                    android:text="Summary"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/nunito_sans"
                    android:justificationMode="inter_word"
                    android:text="Dynamic intern at Zionlab IT consultancy, leading the development of a user-friendly dashboard for a credit cooperative system. Actively contributing ideas to enhance project efficiency, collaborating to resolve technical challenges, and optimizing code for improved performance. Seeking to apply and further develop skills in a professional environment. "
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunito_sans"
                    android:justificationMode="inter_word"
                    android:text="Education"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunito_sans"
                    android:justificationMode="inter_word"
                    android:text="Bohol Island State University - Calape Campus, San Isidro, Calape, Bohol"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/textVsiew15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunito_sans"
                    android:justificationMode="inter_word"
                    android:text="Bachelor of Science in Computer Science"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@drawable/background_frame"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageVsiew4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxWidth="110dp"
                        android:maxHeight="110dp"
                        android:src="@drawable/dev2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textsView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="@font/nunito_sans"
                            android:text="Angelica T. Eliot"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textsView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="@font/nunito_sans"
                            android:text="Calape, Bohol, Philippines"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="12dp"
                            android:orientation="horizontal">


                            <ImageButton
                                android:id="@+id/gitAppDev2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/grey_btn_ripple_circle"
                                android:src="@drawable/ic_github_mark" />

                            <ImageButton
                                android:id="@+id/linkedInAppDev2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/grey_btn_ripple_circle"
                                android:src="@drawable/ic_icons8_linkedin_96" />

                            <ImageButton
                                android:id="@+id/emailAppDev2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="2dp"
                                android:background="@drawable/grey_btn_ripple_circle"
                                android:src="@drawable/ic_email_dev" />

                            <ImageButton
                                android:id="@+id/phoneAppDev2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:background="@drawable/grey_btn_ripple_circle"
                                android:src="@drawable/ic_phone_dev" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/text2View6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/nunito_sans"
                    android:justificationMode="inter_word"
                    android:text="Summary"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textV2iew11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/nunito_sans"
                    android:justificationMode="inter_word"
                    android:text="Motivated personality with strong problem-solving skills and a passion for technology. Experienced in software development, data analysis, and algorithm design. Proficient in programming languages such as Java, PHP, and C. Seeking to leverage academic knowledge and practical skills in a challenging and dynamic work environment "
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text2View14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunito_sans"
                    android:justificationMode="inter_word"
                    android:text="Education"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textVie2w15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunito_sans"
                    android:justificationMode="inter_word"
                    android:text="Bohol Island State University - Calape Campus, San Isidro, Calape, Bohol"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textVs2iew15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunito_sans"
                    android:justificationMode="inter_word"
                    android:text="Bachelor of Science in Computer Science"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>