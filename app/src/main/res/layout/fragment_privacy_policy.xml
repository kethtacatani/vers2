<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PrivacyPolicyFrag">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notificationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="4"
                android:fontFamily="@font/nunito_sans"
                android:text="Privacy Policy"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/closeAppPrivacy"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center | right"
                android:layout_marginRight="20dp"
                android:background="@drawable/grey_btn_ripple_circle"
                android:src="@drawable/ic_expand_down" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:background="@drawable/background_frame"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxWidth="110dp"
                            android:maxHeight="110dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/stay_alert_logo" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/nunito_sans"
                                android:text="Stay Alert: Driver Drowsiness Detection"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/nunito_sans"
                                android:text="StayAlert Team, 2024"
                                android:textColor="@color/black"
                                android:textSize="15sp" />
                            <TextView
                                android:id="@+id/textsView9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/nunito_sans"
                                android:text="Effective Date: March 4, 2024"
                                android:textColor="@color/black"
                                android:textSize="15sp" />


                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViews11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/nunito_sans"
                        android:justificationMode="inter_word"
                        android:text="This Privacy Policy describes how StayAlert, a drowsiness detection application developed for research purposes, collects, uses, and shares your personal information."                        android:textColor="@color/black"
                        android:textSize="18sp" />



                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_sans"
                        android:layout_marginTop="5dp"
                        android:justificationMode="inter_word"
                        android:text="Information We Collect"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/nunito_sans"
                        android:justificationMode="inter_word"
                        android:text="StayAlert collects two types of information:"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/textVsiew11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/nunito_sans"
                        android:justificationMode="inter_word"
                        android:text="\t\u2022Registration Information: This includes basic user information you provide during registration, such as name, age and contact details."
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/texstVsiew11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/nunito_sans"
                        android:justificationMode="inter_word"
                        android:text="\t\u2022App Usage Data: This includes data collected when you use the app, such as timestamps, drowsiness detection details (e.g., yawn, closed eyes), and potentially location data (with your consent)."
                        android:textColor="@color/black"
                        android:textSize="18sp" />




                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_sans"
                        android:justificationMode="inter_word"
                        android:text="Access Control"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_sans"
                        android:justificationMode="inter_word"
                        android:text="Only authorized personnel, including researchers and developers on the StayAlert team, can access your information. User information and images are strictly confidential and will not be shared with anyone outside the team without your consent."
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/texstView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_sans"
                        android:justificationMode="inter_word"
                        android:text="Data Sharing"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tsextView15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_sans"
                        android:justificationMode="inter_word"
                        android:text="We will not share your information with any third party unless you explicitly grant us permission to do so. Research reports based on anonymized data may still be generated, but these reports will not contain any information that could be used to identify you.\nWe will not share your information with any third-party companies or organizations without your consent."
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/stextView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_sans"
                        android:justificationMode="inter_word"
                        android:text="Security"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textVsiew15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_sans"
                        android:justificationMode="inter_word"
                        android:text="We take steps to protect the captured images from unauthorized access or disclosure. However, no method of transmission over the internet or electronic storage is completely secure. Therefore, we cannot guarantee absolute security."
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/stsextView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_sans"
                        android:justificationMode="inter_word"
                        android:text="Your Rights"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tesxtVsiew15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_sans"
                        android:justificationMode="inter_word"
                        android:text="You have rights regarding your information. While specific details may vary, these generally include:"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/texsstVsiew11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/nunito_sans"
                        android:justificationMode="inter_word"
                        android:text="\t\u2022Accessing your information\n\t\u2022Requesting deletion of your information"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tsesxtVsiew15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_sans"
                        android:justificationMode="inter_word"
                        android:text="To exercise these rights, please contact the developers."
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/stsextVsiew14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_sans"
                        android:justificationMode="inter_word"
                        android:text="Changes to this Privacy Policy"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tesxtVsisew15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_sans"
                        android:justificationMode="inter_word"
                        android:text="We may update this Privacy Policy from time to time. "
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/stsextVsiesw14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_sans"
                        android:justificationMode="inter_word"
                        android:text="Contact Us"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tesxtVsisews15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_sans"
                        android:justificationMode="inter_word"
                        android:text="If you have any questions about this Privacy Policy, please contact any of the developers."
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>